<Page x:Class="UnderTheSea.View.RequestResign"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnderTheSea.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RequestResign" Background="PeachPuff" FontSize="15">

    <StackPanel Margin="5">
        <Label Content="Request Resign" FontWeight="Bold"/>
        <Label Content="Apply Resign Date *(min. 2 month from now)"/>
        <DatePicker/>
        <Label Content="Reason *(required)"/>
        <TextBox x:Name="tbReasonResign" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Height="129"/>
        <Button Content="Send Request" Margin="10"/>
    </StackPanel>
</Page>
